{
    "manifest_version": 3,
    "name": "Google Chat Shortcut for Sheets",
    "version": "1.0.0",
    "description": "Googleスプレッドシートの右サイドバーにGoogle Chatへのショートカットボタンを追加します",
    "permissions": [],
    "content_scripts": [
        {
            "matches": [
                "https://docs.google.com/spreadsheets/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle",
            "all_frames": false
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}